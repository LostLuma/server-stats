root = true

[*]
tab_width = 4
charset = utf-8

insert_final_newline = true
trim_trailing_whitespace = true

[*.{gradle,toml}]
indent_style = tab

[*.{java,json}]
indent_size = 4
indent_style = space

[*.{properties,yaml}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
